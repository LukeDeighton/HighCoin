# client side ops
POST    /wallet/send                controllers.ClientController.send
GET     /wallet/new                 controllers.ClientController.generateWallet
GET     /wallet/balance             controllers.ClientController.getBalance(address: String)
GET     /mine                       controllers.ClientController.mine(address: String)

# server side ops
GET     /chain                      controllers.HighCoinController.getBlockchain
POST    /transactions               controllers.HighCoinController.newTransaction


GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
