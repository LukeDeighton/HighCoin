# client side ops
POST    /wallet/send                controllers.ClientController.sendCoins
GET     /wallet/new                 controllers.ClientController.createWallet
GET     /wallet/balance             controllers.ClientController.getBalance(address: String)
GET     /mine                       controllers.ClientController.mineBlock(address: String)

# server side ops
GET     /chain                      controllers.HighCoinController.getBlockchain
POST    /transactions               controllers.HighCoinController.addTransaction


GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
